{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "declaration": false,
        "strict": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@modules/*": [
                "./src/modules/*"
            ],
            "@config": [
                "./src/config/index.ts"
            ],
            "@components": [
                "./src/components/index.ts"
            ],
            "@dto": [
                "./src/dto/index.ts"
            ],
            "@locales": [
                "./src/locales/index.ts"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
